<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">


    <VerticalStackLayout>
        <Label Text="3+3="/>

        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*,*" RowSpacing="10" ColumnSpacing="10">
            <Button Grid.Column="0" Grid.Row="0" Text="7"></Button>
            <Button Grid.Column="1" Grid.Row="0" Text="8"></Button>
            <Button Grid.Column="2" Grid.Row="0" Text="9"></Button>
            <Button Grid.Column="3" Grid.Row="0" Text="/"></Button>
            <Button Grid.Column="0" Grid.Row="1" Text="4"></Button>
            <Button Grid.Column="1" Grid.Row="1" Text="5"></Button>
            <Button Grid.Column="2" Grid.Row="1" Text="6"></Button>
            <Button Grid.Column="3" Grid.Row="1" Text="*"></Button>
            <Button Grid.Column="0" Grid.Row="2" Text="1"></Button>
            <Button Grid.Column="1" Grid.Row="2" Text="2"></Button>
            <Button Grid.Column="2" Grid.Row="2" Text="3"></Button>
            <Button Grid.Column="3" Grid.Row="2" Text="-"></Button>
            <Button Grid.Column="0" Grid.Row="3" Text="0"></Button>
            <Button Grid.Column="1" Grid.Row="3" Text="."></Button>
            <Button Grid.Column="2" Grid.Row="3" Text="="></Button>
            <Button Grid.Column="3" Grid.Row="3" Text="+"></Button>
        </Grid>
    </VerticalStackLayout>


</ContentPage>
